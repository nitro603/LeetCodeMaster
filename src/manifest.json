{
  "manifest_version": 3,
  "name": "LeetMate",
  "description": "Review Leetcode solutions in video or written format!",
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "LCMicon.png"
  },
  "icons": {
    "128": "LCMicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["LCMicon.png","panel.js"],
      "matches": []
    }
  ],
  "permissions": [
      "tabs",
      "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ]
}
